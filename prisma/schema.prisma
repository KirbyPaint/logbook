generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PrimeLogDataCategory {
  PIRATE_DATA  @map("Pirate Data")
  CHOZO_LORE   @map("Chozo Lore")
  CREATURES    @map("Creatures")
  RESEARCH     @map("Research")
  ARTIFACTS    @map("Artifacts")
}

model PrimeLog {
  id            String               @id @default(cuid())
  createdAt     DateTime             @default(now())
  logCategory   PrimeLogDataCategory
  entry         String               @unique
  firstLocation String
  entryText     String
  limitedScan   Boolean?
  notes         String?
  image         String?
  scannedById   String?              @db.Uuid
  scannedBy     User?                @relation(fields: [scannedById], references: [id])
}

model Prime2Log {
  id            String               @id @default(cuid())
  createdAt     DateTime             @default(now())
  logCategory   PrimeLogDataCategory
  entry         String               @unique
  firstLocation String
  entryText     String
  limitedScan   Boolean?
  notes         String?
  image         String?
  planet        String?
  biome         String?
  scannedById   String?              @db.Uuid
  scannedBy     User?                @relation(fields: [scannedById], references: [id])
}

model Prime3Log {
  id            String               @id @default(cuid())
  createdAt     DateTime             @default(now())
  logCategory   PrimeLogDataCategory
  entry         String               @unique
  firstLocation String
  entryText     String
  limitedScan   Boolean?
  notes         String?
  image         String?
  scannedById   String?              @db.Uuid
  scannedBy     User?                @relation(fields: [scannedById], references: [id])
}

model User {
  id        String      @id @db.Uuid
  email     String      @unique
  name      String?
  username  String      @unique
  password  String
  PrimeLog  PrimeLog[]
  Prime2Log Prime2Log[]
  Prime3Log Prime3Log[]
}
